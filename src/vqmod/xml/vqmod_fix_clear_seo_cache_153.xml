<modification>
        <id>fix_clear_seo_cache</id>
        <version>1.5.3</version>
        <vqmver>2.1.6</vqmver>
        <author>Konstantin V. Sapronov aka costas</author>
        <file name="admin/model/catalog/*.php">
                <operation error="skip">
                        <search position="before"><![CDATA[if ($data['keyword']) {]]></search>
                        <add><![CDATA[
                    /* BEGIN Clear cache SEO */
                    $this->cache->delete('seo_pro');
                    $this->cache->delete('seo_url');
                    /* END Clear cache SEO */
                    ]]></add>
                </operation>
        </file>
</modification>